{
  "name": "testrail-agent",
  "version": "1.0.0",
  "description": "A conversational TestRail agent with a backend proxy to solve CORS issues.",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "start:dev": "node dist/server/index.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.server.json",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon",
    "dev:frontend": "vite",
    "dev:legacy": "nodemon",
    "preview": "npm run build && npm run start:dev",
    "analyze": "npm run build:frontend -- --analyze"
  },
  "dependencies": {
    "@google/genai": "^1.11.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.14.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vite": "^7.0.6"
  }
}
